# --- General ---
APP_URL=http://localhost:3000

# --- Database ---
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/padel?schema=public

# --- NextAuth ---
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=replace_me_with_strong_secret

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Facebook OAuth
FACEBOOK_CLIENT_ID=your_facebook_client_id
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret

# --- Resend (Email) ---
RESEND_API_KEY=your_resend_key
RESEND_FROM=no-reply@yourdomain.com

# --- Paymob Accept ---
PAYMOB_API_KEY=your_paymob_api_key
PAYMOB_INTEGRATION_ID=your_integration_id     # e.g. card integration id
PAYMOB_IFRAME_ID=your_iframe_id               # if you plan to redirect to iframe
PAYMOB_HMAC_SECRET=your_hmac_secret           # for webhook verification
CURRENCY=EGP
