# Copy to .env and fill with your values

# App URLs
APP_URL=https://your-domain.com
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=replace_with_strong_secret

# Postgres (Compose service)
POSTGRES_DB=padel
POSTGRES_USER=padel
POSTGRES_PASSWORD=padel

# Prisma database URL (matches the db service)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}?schema=public

# OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# Email (Resend)
RESEND_API_KEY=
RESEND_FROM=no-reply@yourdomain.com

# Paymob (optional)
PAYMOB_API_KEY=
PAYMOB_INTEGRATION_ID=
PAYMOB_IFRAME_ID=
PAYMOB_HMAC_SECRET=
CURRENCY=EGP
